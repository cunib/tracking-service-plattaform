<div class="page-header">
  <div class="row">
    <h1 class="col-md-10"> <%= t '.title' %></h1>
    <div class="actions col-md-2">
      <%= link_to icon('plus'), new_user_path, 
        class: 'btn btn-success', data: { toggle: 'tooltip', container: 'body' }, 
        title: t('user.actions.new', default: t('global.actions.new')) %>
      <a class="btn btn-info" role="button" data-toggle="collapse"
        href="#collapse_search_form" aria-expanded="false" aria-controls="collapse_search_form">
        <%= icon "filter" %>
      </a>
    </div>
  </div>
</div>

<div class="row">
  <%= render 'filter', q: @q %>
</div>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
    <tr>
      <th><%= t 'activerecord.attributes.user.name' %></th>
      <th><%= t 'activerecord.attributes.user.email' %></th>
      <th class="actions"><%= t '.actions', default: t('global.index.actions') %></th>
    </tr>
    </thead>

    <tbody>
      <% @users.each do |user| -%>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td>
            <div class="btn-toolbar btn-group-xs">
              <%= link_to icon('eye-open'), user,
                class: 'btn btn-link',
                title: t('users.actions.show', default: t('global.actions.show')),
                data: { toggle: 'tooltip', container: 'body', placement: 'left' } %>
              <%= link_to icon('pencil'), edit_user_path(user),
                class: 'btn btn-link',
                title: t('users.actions.edit', default: t('global.actions.edit')),
                data: { toggle: 'tooltip', container: 'body', placement: 'left' } %>
              <%= link_to icon('trash'), user,  method: :delete,
                class: 'btn btn-link text-danger',
                title: t('users.actions.destroy', default: t('global.actions.destroy')),
                data: { toggle: 'tooltip', container: 'body', placement: 'left', 
                        confirm: t('users.actions.confirm_destroy', 
                        default: t('global.actions.confirm_destroy'))} %>
            </div>
          </td>
        </tr>
      <% end -%>
    </tbody>
  </table>

  <%= render partial:'shared/pager', locals: { model: @users } %>

</div>
