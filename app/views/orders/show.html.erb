<div class="page-header">
  <div class="row">
    <div class="col-md-10">
      <h1><%= t '.title', default: t('global.show.title') %></h1>
    </div>
    <div class="col-md-2">
      <div class="actions">
        <%= link_to icon('chevron-left'), business_orders_path(@business), 
          class: 'btn btn-default', data: { toggle: 'tooltip', container: 'body' }, 
          title: t('.back', default: t('global.actions.back')) %>
        <%= link_to icon('pencil'), edit_business_order_path(@business, @order), 
          class: 'btn btn-primary', data: { toggle: 'tooltip', container: 'body' }, 
          title: t('.back', default: t('global.actions.edit')) %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <dl class="dl-horizontal">
        <dt><%= t 'activerecord.attributes.order.business' %></dt>
        <dd><%= @order.business %></dd>
        <dt><%= t 'activerecord.attributes.order.address' %></dt>
        <dd><%= @order.address %></dd>
        <dt><%= t 'activerecord.attributes.order.start_date' %></dt>
        <dd><%= @order.start_date %></dd>
        <dt><%= t 'activerecord.attributes.order.end_date' %></dt>
        <dd><%= @order.end_date %></dd>
        <dt><%= t 'activerecord.attributes.order.hash_code' %></dt>
        <dd><%= @order.hash_code %></dd>
        <dt><%= t 'activerecord.attributes.order.status' %></dt>
        <dd><%= raw t "enum.order.status.#{@order.status}" %></dd>
        <% if @order.delivery.present? %>
          <dt><%= t 'activerecord.attributes.order.delivery' %></dt>
        <dd><%= link_to "Acceder al reparto", business_delivery_path(@business, @order.delivery) %></dd>
        <% end %>
    </dl>
  </div>
  <div class="col-md-6">
    <h4>Productos</h4>
    <% @order.products.each do |product| %>
      <p><%= product %></p>
    <% end %>
  </div>
</div>
