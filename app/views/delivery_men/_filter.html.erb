<div class="collapse col-md-12" id="collapse_search_form">
  <div class="search">
    <%= search_form_for(@q, url: business_delivery_men_path(@business)) do |f| -%>
      <div class="row">
        <%= f.input :nickname,
                    required: false,
                    label: t('.name'),
                    wrapper_html: { class: 'col-md-8 col-md-offset-2' }
        %>
      </div>
      <div class="row">
        <div class="col-md-12 text-right">
          <%= f.submit t('global.filters.submit'), class: 'btn btn-info btn-sm' %>
          <%= link_to icon('remove'),
                      business_delivery_men_path(@business, _reset: 'reset'),
                      title: t('global.filters.clear_filter'),
                      data: { toggle: 'tooltip', container: 'body', placement: 'left' },
                      class: 'btn btn-primary btn-sm' -%>
        </div>
      </div>
    <% end -%>
  </div>
</div>
