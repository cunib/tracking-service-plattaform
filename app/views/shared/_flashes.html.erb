<div class="flashes">
  <%- flash.each do |name, msg| %>
    <%= content_tag :div, class: "alert alert-#{ name == 'alert' ? 'danger' : 'success' }" do -%>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <div class="container">
        <%= msg.html_safe %>
      </div>
    <% end -%>
  <% end -%>
</div>
