<% if form.object.errors[:base].any? %>
  <div class="row">
    <div class="col-md-12">
      <div class="alert alert-danger" role="alert">
        <% form.object.errors[:base].each do |e| %>
          <ul>
            <li><%= e %></li>
          </ul>
        <% end -%>
      </div>
    </div>
  </div>
<% end -%>
