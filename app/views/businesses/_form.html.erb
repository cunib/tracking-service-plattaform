<%= simple_form_for(@business) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :address %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-success', value: t('.submit', default: t('global.form.actions.submit')) %>
  </div>
<% end %>
