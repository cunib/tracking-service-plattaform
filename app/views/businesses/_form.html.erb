<%= simple_form_for(@business) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="row">
      <%= f.input :name, wrapper_html: { class: 'col-md-5' } %>
      <%= f.input :address, wrapper_html: { class: 'col-md-4' } %>
      <%= f.input :path_strategy, as: :select2, collection: PathStrategy.strategy_types,
        label_method: ->(strategy) { label_for_strategy(strategy) }, wrapper_html: { class: 'col-md-3' } %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-success', 
      value: t('.submit', default: t('global.form.actions.submit')) %>
  </div>
<% end %>
